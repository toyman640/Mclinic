<h1>Edit Patient</h1>

<%= form_with model: @patient, url: patient_path(@patient), method: :patch do |form| %>
  <div>
    <%= form.label :fullname %>
    <%= form.text_field :fullname %>
  </div>
  <div>
    <%= form.label :age %>
    <%= form.text_field :age, type: 'number' %>
  </div>
  <%= form.submit "Update Patient" %>
<% end %>
